---
// Navbar component for DeFi México
// Eliminamos la importación de imagen
---

<nav id="navbar" class="navbar">
  <div class="nav-container">
    <!-- Menú hamburguesa (visible en móvil y cuando hay scroll) -->
    <div class="hamburger-menu" id="hamburger-menu">
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
    </div>
    
    <!-- Logo animado en el centro -->
    <div class="logo-container">
      <a href="/acelerador" class="logo-animation">
        <div class="logo-wrapper">
          <img 
            src="https://raw.githubusercontent.com/Vaios0x/DefiMexico/main/logo-defi-mexico.png" 
            alt="DeFi México Logo" 
            class="logo-image" 
          />
          <span class="logo-text">DeFi México</span>
        </div>
      </a>
    </div>
    
    <!-- Botón Apply en la derecha -->
    <div class="nav-right">
      <a href="/aplicacion" class="apply-button">
        Apply →
      </a>
    </div>
  </div>
</nav>

<!-- Menú móvil overlay -->
<div class="mobile-menu-overlay" id="mobile-menu-overlay">
  <div class="mobile-menu">
    <div class="mobile-menu-header">
      <a href="/acelerador" class="mobile-logo">
        <div class="logo-wrapper">
          <img 
            src="https://raw.githubusercontent.com/Vaios0x/DefiMexico/main/logo-defi-mexico.png" 
            alt="DeFi México Logo" 
            class="mobile-logo-image" 
          />
          <span class="logo-text">DeFi México</span>
        </div>
      </a>
      <button class="close-menu" id="close-menu">✕</button>
    </div>
    <nav class="mobile-nav">
      <ul class="mobile-nav-list">
        <li><a href="/" class="mobile-nav-link">Inicio</a></li>
        <li><a href="/acelerador" class="mobile-nav-link">DeFi México</a></li>
        <li><a href="/aplicacion" class="mobile-nav-link">Aplicación</a></li>
        <li><a href="/empresas" class="mobile-nav-link">Empresas</a></li>
        <li><a href="/ideas-startup" class="mobile-nav-link">Ideas de Startup</a></li>
        <li><a href="/inversiones" class="mobile-nav-link">Inversiones Estratégicas</a></li>
        <li><a href="/articulos" class="mobile-nav-link">Artículos</a></li>
        <li><a href="/podcast" class="mobile-nav-link">Podcast ↗</a></li>
        <li><a href="/trabajos" class="mobile-nav-link">Trabajos</a></li>
      </ul>
    </nav>
  </div>
</div>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    background: rgba(18, 18, 18, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .navbar.scrolled {
    background: rgba(255, 255, 255, 0.95);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .navbar.scrolled .logo-text {
    color: #111827;
  }

  .navbar.scrolled .apply-button {
    color: #111827;
    border-color: #111827;
  }

  .navbar.scrolled .apply-button:hover {
    background: #111827;
    color: white;
  }

  .navbar.scrolled .hamburger-menu {
    display: flex;
  }

  .navbar.scrolled .logo-container {
    justify-content: flex-start;
  }

  /* Colores personalizados por página - Mayor especificidad */
  .navbar.scrolled.page-home {
    background: rgba(34, 197, 94, 0.95) !important; /* Verde */
  }

  .navbar.scrolled.page-acelerador {
    background: rgba(59, 130, 246, 0.95) !important; /* Azul */
  }

  .navbar.scrolled.page-empresas {
    background: rgba(239, 68, 68, 0.95) !important; /* Rojo */
  }

  .navbar.scrolled.page-inversiones {
    background: rgba(245, 158, 11, 0.95) !important; /* Amarillo */
  }

  .navbar.scrolled.page-aplicacion {
    background: rgba(255, 255, 255, 0.95) !important; /* Blanco */
  }

  .navbar.scrolled.page-test {
    background: rgba(168, 85, 247, 0.95) !important; /* Púrpura */
  }

  /* Ajustar colores del texto para cada página */
  .navbar.scrolled.page-home .logo-text,
  .navbar.scrolled.page-acelerador .logo-text,
  .navbar.scrolled.page-empresas .logo-text,
  .navbar.scrolled.page-inversiones .logo-text,
  .navbar.scrolled.page-aplicacion .logo-text {
    color: #111827;
  }

  .navbar.scrolled.page-home .apply-button,
  .navbar.scrolled.page-acelerador .apply-button,
  .navbar.scrolled.page-empresas .apply-button,
  .navbar.scrolled.page-inversiones .apply-button,
  .navbar.scrolled.page-aplicacion .apply-button {
    color: #111827;
    border-color: #111827;
  }

  .navbar.scrolled.page-home .hamburger-line,
  .navbar.scrolled.page-acelerador .hamburger-line,
  .navbar.scrolled.page-empresas .hamburger-line,
  .navbar.scrolled.page-inversiones .hamburger-line,
  .navbar.scrolled.page-aplicacion .hamburger-line {
    background: #111827;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo-container {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .logo-animation {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: transform 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .logo-animation:hover {
    transform: scale(1.05);
  }

  .logo-icon {
    font-size: 1.5rem;
    animation: pulse 2s infinite;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    transition: color 0.3s ease;
  }

  .nav-right {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }

  .apply-button {
    padding: 0.5rem 1rem;
    border: 1px solid white;
    border-radius: 8px;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    background: transparent;
  }

  .apply-button:hover {
    background: white;
    color: #111827;
  }

  /* Hamburger Menu */
  .hamburger-menu {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 20px;
    cursor: pointer;
    z-index: 1001;
    padding: 2px;
  }

  .hamburger-line {
    width: 100%;
    height: 2px;
    background: white;
    transition: all 0.3s ease;
  }

  .navbar.scrolled .hamburger-line {
    background: #111827;
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #121212;
    padding: 2rem;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .mobile-menu-overlay.active .mobile-menu {
    transform: translateX(0);
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .mobile-logo:hover {
    transform: scale(1.05);
  }

  .mobile-logo .logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
  }

  .close-menu {
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mobile-nav-link {
    color: white;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: color 0.3s ease;
  }

  .mobile-nav-link:hover {
    color: #bc52ee;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
    }
    
    .logo-text {
      font-size: 1rem;
    }
    
    .apply-button {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }

    .hamburger-menu {
      display: flex;
    }

    .logo-container {
      justify-content: center;
    }
  }

  /* Mostrar hamburger menu en desktop cuando hay scroll */
  @media (min-width: 769px) {
    .navbar.scrolled .hamburger-menu {
      display: flex !important;
    }
  }

  /* Asegurar que el hamburger menu sea visible cuando debe serlo */
  .navbar.scrolled .hamburger-menu {
    display: flex !important;
  }

  /* Estilos existentes */
  .logo-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo-image, .mobile-logo-image {
    width: 50px;
    height: 50px;
    object-fit: contain;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .logo-animation:hover .logo-image,
  .mobile-logo:hover .mobile-logo-image {
    transform: scale(1.1);
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    letter-spacing: -0.02em;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Resto de los estilos existentes */
</style>

<script>
  // Efecto de scroll para cambiar el color de la navbar y mostrar menú hamburguesa
  document.addEventListener('DOMContentLoaded', function() {
    const navbar = document.getElementById('navbar');
    const hamburgerMenu = document.getElementById('hamburger-menu');
    const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
    const closeMenu = document.getElementById('close-menu');
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    
    // Detectar la página actual
    function getCurrentPage() {
      const path = window.location.pathname;
      if (path === '/') return 'home';
      if (path === '/acelerador') return 'acelerador';
      if (path === '/empresas') return 'empresas';
      if (path === '/inversiones') return 'inversiones';
      if (path === '/aplicacion') return 'aplicacion';
      if (path === '/test') return 'test';
      return 'home';
    }
    
    if (navbar) {
      // Agregar clase de página actual
      const currentPage = getCurrentPage();
      console.log('Página actual:', currentPage); // Debug
      navbar.classList.add(`page-${currentPage}`);
      
      function handleScroll() {
        if (window.scrollY > 50) {
          navbar.classList.add('scrolled');
          console.log('Scroll detectado, agregando clase scrolled'); // Debug
        } else {
          navbar.classList.remove('scrolled');
          console.log('Scroll removido, quitando clase scrolled'); // Debug
        }
      }
      
      // Ejecutar handleScroll al cargar la página
      handleScroll();
      
      window.addEventListener('scroll', handleScroll);
    }

    // Abrir menú móvil
    if (hamburgerMenu && mobileMenuOverlay) {
      hamburgerMenu.addEventListener('click', function() {
        mobileMenuOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }

    // Cerrar menú móvil
    if (closeMenu && mobileMenuOverlay) {
      closeMenu.addEventListener('click', function() {
        mobileMenuOverlay.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    // Cerrar menú al hacer click en un enlace
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', function() {
        mobileMenuOverlay.classList.remove('active');
        document.body.style.overflow = '';
      });
    });

    // Cerrar menú al hacer click fuera del menú
    if (mobileMenuOverlay) {
      mobileMenuOverlay.addEventListener('click', function(e) {
        if (e.target === mobileMenuOverlay && mobileMenuOverlay) {
          mobileMenuOverlay.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    }
  });
</script> 