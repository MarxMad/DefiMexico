---
// Hero section component for DeFi México
import logoImage from '../assets/images/Logo DeFi México.png';
import heroVideo from '../assets/videos/defimexico-hero.mp4';
---

<section id="hero" class="hero">
  <video 
    class="hero-video" 
    autoplay 
    loop 
    muted 
    playsinline
  >
    <source src={heroVideo.src} type="video/mp4" />
    Tu navegador no soporta videos HTML5.
  </video>
  
  <div class="hero-content">
    <div class="hero-logo">
      <img 
        src={logoImage.src} 
        alt="DeFi México Logo" 
        class="logo-image" 
        width={logoImage.width}
        height={logoImage.height}
      />
    </div>
    
    <h1 class="hero-title">
      Ayudamos a startups
      <br />
      de DeFi a alcanzar
      <br />
      la velocidad de escape.
    </h1>
    
    <p class="hero-subtitle">
      DeFi México es el acelerador líder y comunidad de fundadores en el ecosistema crypto de México.
    </p>
    
    <div class="hero-stats">
      <div class="stat-item">
        <span class="stat-label">Valoración Combinada</span>
        <span class="stat-value">$2.5B</span>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.2;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    padding: 0 2rem;
  }

  .hero-logo {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .logo-image {
    width: 150px;
    height: 150px;
    object-fit: contain;
    border-radius: 16px;
    transition: transform 0.3s ease;
  }

  .logo-image:hover {
    transform: scale(1.05);
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    color: white;
    margin: 0 0 2rem 0;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 3rem 0;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    margin-top: 4rem;
  }

  .stat-item {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: transform 0.3s ease;
  }

  .stat-item:hover {
    transform: translateY(-5px);
  }

  .stat-label {
    display: block;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    display: block;
    font-size: 3rem;
    font-weight: 700;
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 0 1rem;
      padding-top: 100px;
    }
    
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .stat-value {
      font-size: 2.5rem;
    }
  }
</style> 