---
// Componente de Artículos para DeFi México
const articles = [
    {
      title: "Yield Farming: Estrategias Avanzadas en 2025",
      author: "Ana Martínez",
      readTime: 8,
      date: "15 Ene 2025",
      category: "DeFi",
      tags: ["Yield Farming", "Estrategias", "Inversión"],
      excerpt: "Descubre las estrategias más innovadoras de yield farming para maximizar tus rendimientos en el ecosistema DeFi."
    },
    {
      title: "Tokenización de Activos Reales",
      author: "Carlos Rodríguez",
      readTime: 10,
      date: "10 Feb 2025",
      category: "Blockchain",
      tags: ["Tokenización", "Activos Reales", "Innovación"],
      excerpt: "Exploramos cómo la tokenización está transformando la forma en que invertimos en propiedades, arte y otros activos."
    },
    {
      title: "Seguridad en Protocolos DeFi",
      author: "Laura González",
      readTime: 6,
      date: "5 Ene 2025",
      category: "Seguridad",
      tags: ["Ciberseguridad", "Smart Contracts", "Auditorías"],
      excerpt: "Guía completa para proteger tus activos cripto y evitar vulnerabilidades en protocolos descentralizados."
    },
    {
      title: "Regulación Crypto en México",
      author: "Miguel Sánchez",
      readTime: 9,
      date: "18 Feb 2025",
      category: "Regulación",
      tags: ["Legislación", "Crypto", "México"],
      excerpt: "Análisis detallado del panorama regulatorio para criptomonedas y startups blockchain en México."
    }
  ];
---

<section id="articles" class="articles-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Artículos DeFi</h2>
      <p class="section-subtitle">Insights, análisis y conocimientos del ecosistema cripto mexicano</p>
    </div>

    <div class="articles-grid">
      {articles.map((article) => (
        <article class="article-card">
          <div class="article-header">
            <div class="article-icon">{article.image}</div>
            <div class="article-meta">
              <span class="article-category">{article.category}</span>
              <span class="article-date">{article.date}</span>
            </div>
          </div>
          <h3 class="article-title">{article.title}</h3>
          <p class="article-excerpt">{article.excerpt}</p>
          <div class="article-footer">
            <div class="article-author">
              <span>Por {article.author}</span>
            </div>
            <div class="article-read-time">
              <span>{article.readTime} lectura</span>
            </div>
          </div>
          <div class="article-tags">
            {article.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>

    <div class="articles-cta">
      <a href="#" class="cta-button">Ver Todos los Artículos</a>
    </div>
  </div>
</section>

<style>
  .articles-section {
    background: #000000; /* Negro puro */
    padding: 6rem 1rem;
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 700;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #9ca3af; /* gray-400 */
    max-width: 600px;
    margin: 0 auto;
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .article-card {
    background: #1e293b; /* slate-800 */
    border-radius: 1rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .article-card:hover {
    transform: translateY(-5px);
    border-color: rgba(255, 255, 255, 0.1);
    background: #334155; /* slate-700 */
  }

  .article-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .article-icon {
    font-size: 2.5rem;
    background: rgba(255, 255, 255, 0.1);
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.75rem;
  }

  .article-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .article-category {
    font-size: 0.875rem;
    color: #10b981; /* emerald-500 */
    margin-bottom: 0.25rem;
  }

  .article-date {
    font-size: 0.75rem;
    color: #6b7280; /* gray-500 */
  }

  .article-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .article-excerpt {
    color: #9ca3af; /* gray-400 */
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .article-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .article-author {
    color: #e5e7eb; /* gray-200 */
  }

  .article-read-time {
    color: #6b7280; /* gray-500 */
  }

  .article-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: rgba(255, 255, 255, 0.1);
    color: #e5e7eb; /* gray-200 */
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
  }

  .articles-cta {
    text-align: center;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    color: white;
    text-decoration: none;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(50, 69, 255, 0.3);
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 