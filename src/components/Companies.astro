    }
    
    .filters-container {
      flex-direction: column;
    }
    
    .filter-group {
      min-width: auto;
    }
    
    .main-title {
      font-size: 2.5rem;
    }
    
    .startups-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .startup-card {
      padding: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .main-title {
      font-size: 2rem;
    }
    
    .startup-card {
      padding: 1rem;
    }
    
    .startup-logo {
      width: 3rem;
      height: 3rem;
      font-size: 1rem;
    }
  }
</style>

<script>
  // Funcionalidad de filtrado
  document.addEventListener('DOMContentLoaded', function() {
    const categoryFilter = document.getElementById('category-filter');
    const servicesFilter = document.getElementById('services-filter');
    const fundingFilter = document.getElementById('funding-filter');
    const startupsGrid = document.getElementById('startups-grid');
    const resultsCount = document.getElementById('results-count');
    
    function filterStartups() {
      const categoryValue = categoryFilter.value;
      const servicesValue = servicesFilter.value;
      const fundingValue = fundingFilter.value;
      
      const allCards = startupsGrid.querySelectorAll('.startup-card');
      let visibleCount = 0;
      
      allCards.forEach(card => {
        const cardCategory = card.dataset.category;
        const cardServices = card.dataset.services;
        const cardFunding = card.dataset.funding;
        
        const categoryMatch = !categoryValue || cardCategory === categoryValue;
        const servicesMatch = !servicesValue || cardServices === servicesValue;
        const fundingMatch = !fundingValue || cardFunding === fundingValue;
        
        if (categoryMatch && servicesMatch && fundingMatch) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      
      resultsCount.textContent = visibleCount;
    }
    
    // Event listeners para los filtros
    if (categoryFilter) categoryFilter.addEventListener('change', filterStartups);
    if (servicesFilter) servicesFilter.addEventListener('change', filterStartups);
    if (fundingFilter) fundingFilter.addEventListener('change', filterStartups);
    
    // Inicializar el conteo
    filterStartups();
  });
</script> 