<style>
  .companies-section {
    padding: 6rem 2rem;
    background: #121212;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    text-align: center;
    margin: 0 0 1rem 0;
