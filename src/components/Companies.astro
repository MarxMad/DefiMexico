    border-color: #64748b; /* slate-500 */
  }

  .filter-select:focus {
    outline: none;
    border-color: #3b82f6; /* blue-500 */
    background: #334155;
  }

  .filter-select option {
    background: #1e293b;
    color: white;
  }

  /* Arrow for select */
  .filter-group::after {
    content: '‚ñº';
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.7);
    pointer-events: none;
    font-size: 0.8rem;
  }

  /* Main Content */
  .main-content {
    flex: 1;
  }

  .header-section {
    margin-bottom: 3rem;
    text-align: center;
    width: 100%;
  }

