  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .content-wrapper {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    width: 100%;
  }

  /* Filters Sidebar */
  .filters-sidebar {
    width: 20rem;
    flex-shrink: 0;
  }

  .filters-title {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1.5rem 0;
  }

  .filters-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .filter-group {
    position: relative;
  }

  .filter-select {
    width: 100%;
    padding: 0.75rem 1rem;
    background: #1e293b; /* slate-800 */
    border: 1px solid #475569; /* slate-700 */
    border-radius: 6px;
    color: white;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    appearance: none;
  }

  .filter-select:hover {
