---

<aside class="sidebar">
  <nav class="sidebar-nav">
    <ul class="nav-list">
      <li><a href="/acelerador" class="nav-link">DeFi México</a></li>
      <li><a href="/aplicacion" class="nav-link">Aplicación</a></li>
      <li><a href="/empresas" class="nav-link">Empresas</a></li>
      <li><a href="/ideas-startup" class="nav-link">Ideas de Startup</a></li>
      <li><a href="/inversiones" class="nav-link">Inversiones Estratégicas</a></li>
      <li><a href="/articulos" class="nav-link">Artículos</a></li>
      <li><a href="/podcast" class="nav-link">Podcast ↗</a></li>
      <li><a href="/trabajos" class="nav-link">Trabajos</a></li>
      <li><a href="#" class="nav-link wallet-connect">Conectar Wallet</a></li>
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    height: 100vh;
    width: 200px;
    background: transparent;
    z-index: 100;
    padding-top: 100px;
    padding-left: 2rem;
  }

  .sidebar-nav {
    height: 100%;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .nav-link {
    color: white;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    display: block;
    position: relative;
  }

  .nav-link:hover {
    color: #bc52ee;
    transform: translateX(5px);
  }

  .nav-link.active {
    color: #3245ff;
    font-weight: 600;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    left: -10px;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    transition: width 0.3s ease;
  }

  .nav-link:hover::before,
  .nav-link.active::before {
    width: 8px;
  }

  .wallet-connect {
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    color: white !important;
    border-radius: 8px;
    padding: 0.5rem 1rem;
    font-weight: 600;
    transition: all 0.3s ease;
    text-align: center;
    margin-top: 1rem;
  }

  .wallet-connect:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(50, 69, 255, 0.3);
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }
  }

  /* Ocultar sidebar cuando navbar está scrolleada */
  .sidebar.hidden {
    opacity: 0;
    visibility: hidden;
    transform: translateX(-100%);
    transition: all 0.3s ease;
  }

  /* Mostrar sidebar cuando no está scrolleada */
  .sidebar {
    transition: all 0.3s ease;
  }
</style>

<script>
  // Marcar enlace activo basado en la sección actual y ocultar sidebar en scroll
  document.addEventListener('DOMContentLoaded', function() {
    const navLinks = document.querySelectorAll('.nav-link');
    const sidebar = document.querySelector('.sidebar');
    
    function setActiveLink() {
      const scrollPosition = window.scrollY + 100;
      
      navLinks.forEach(link => {
        const targetId = link.getAttribute('href')?.substring(1);
        if (targetId) {
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            const elementTop = targetElement.offsetTop;
            const elementBottom = elementTop + targetElement.offsetHeight;
            
            if (scrollPosition >= elementTop && scrollPosition < elementBottom) {
              navLinks.forEach(l => l.classList.remove('active'));
              link.classList.add('active');
            }
          }
        }
      });
    }

    function handleScroll() {
      if (sidebar) {
        if (window.scrollY > 50) {
          sidebar.classList.add('hidden');
        } else {
          sidebar.classList.remove('hidden');
        }
      }
      setActiveLink();
    }

    // Ejecutar handleScroll al cargar la página
    handleScroll();
    
    window.addEventListener('scroll', handleScroll);
    setActiveLink(); // Establecer enlace activo inicial
  });
</script> 