							<div class="growth-stat">
								<span class="stat-label">2022</span>
								<span class="stat-value">15</span>
							</div>
							<div class="growth-stat">
								<span class="stat-label">2023</span>
								<span class="stat-value">32</span>
							</div>
							<div class="growth-stat">
								<span class="stat-label">2024</span>
								<span class="stat-value">50+</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Geographic Distribution -->
		<section class="geographic-section">
			<div class="container">
				<div class="section-header">
					<h2 class="section-title">Distribución Geográfica</h2>
					<p class="section-subtitle">Presencia global de nuestras startups</p>
				</div>
				
				<div class="geographic-grid">
					<div class="region-card">
						<div class="region-header">
							<div class="region-icon">🇲🇽</div>
							<h3 class="region-name">México</h3>
						</div>
						<div class="region-stats">
							<div class="region-stat">
								<span class="stat-value">25</span>
								<span class="stat-label">Startups</span>
							</div>
							<div class="region-stat">
								<span class="stat-value">$1.2B</span>
								<span class="stat-label">Valoración</span>
							</div>
						</div>
					</div>
					
					<div class="region-card">
						<div class="region-header">
							<div class="region-icon">🇧🇷</div>
							<h3 class="region-name">Brasil</h3>
						</div>
						<div class="region-stats">
							<div class="region-stat">
								<span class="stat-value">12</span>
								<span class="stat-label">Startups</span>
							</div>
							<div class="region-stat">
								<span class="stat-value">$600M</span>
								<span class="stat-label">Valoración</span>
							</div>
						</div>
					</div>
					
					<div class="region-card">
						<div class="region-header">
							<div class="region-icon">🇦🇷</div>
							<h3 class="region-name">Argentina</h3>
						</div>
						<div class="region-stats">
							<div class="region-stat">
								<span class="stat-value">8</span>
								<span class="stat-label">Startups</span>
							</div>
							<div class="region-stat">
								<span class="stat-value">$400M</span>
								<span class="stat-label">Valoración</span>
							</div>
						</div>
					</div>
					
					<div class="region-card">
						<div class="region-header">
							<div class="region-icon">🌍</div>
							<h3 class="region-name">Otros</h3>
						</div>
						<div class="region-stats">
							<div class="region-stat">
								<span class="stat-value">5</span>
								<span class="stat-label">Startups</span>
							</div>
							<div class="region-stat">
								<span class="stat-value">$300M</span>
								<span class="stat-label">Valoración</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</MainLayout>

<style>
	.metrics-page {
		position: relative;
		z-index: 1;
		margin-left: 260px;
		transition: margin-left 0.3s ease;
	}

	/* Cuando el sidebar está colapsado */
	.sidebar-nested.collapsed ~ .metrics-page {
		margin-left: 70px;
	}

	.container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Hero Section */
	.hero-section {
		padding: 6rem 0;
		background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
		position: relative;
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 40% 40%, rgba(16, 185, 129, 0.05) 0%, transparent 50%);
		animation: backgroundShift 20s ease-in-out infinite;
	}

	@keyframes backgroundShift {
		0%, 100% { transform: scale(1) rotate(0deg); }
		50% { transform: scale(1.1) rotate(1deg); }
	}

	.hero-content {
		text-align: center;
		position: relative;
		z-index: 2;
	}

	.hero-title {
		font-size: 4rem;
		font-weight: 800;
		margin: 0 0 1rem 0;
		background: linear-gradient(135deg, #60a5fa 0%, #a855f7 50%, #10b981 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		letter-spacing: -0.02em;
		line-height: 1.1;
	}

	.hero-subtitle {
		font-size: 1.3rem;
		color: rgba(255, 255, 255, 0.8);
		margin: 0 0 3rem 0;
		font-weight: 500;
	}

	.hero-stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.stat-item {
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(255, 255, 255, 0.05);
		border-radius: 16px;
		padding: 2rem;
		text-align: center;
		backdrop-filter: blur(20px);
		transition: all 0.3s ease;
	}

	.stat-item:hover {
		transform: translateY(-5px);
		border-color: rgba(96, 165, 250, 0.3);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
	}

	.stat-value {
		display: block;
		font-size: 2.5rem;
		font-weight: 700;
		color: white;
		margin-bottom: 0.5rem;
	}

	.stat-label {
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.6);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	/* Section Headers */
	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-title {
		font-size: 3rem;
		font-weight: 700;
		color: white;
		margin: 0 0 1rem 0;
		background: linear-gradient(135deg, #60a5fa 0%, #a855f7 50%, #10b981 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-subtitle {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	/* Performance Section */
	.performance-section {
		padding: 6rem 0;
		background: #121212;
	}

	.performance-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.performance-card {
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(255, 255, 255, 0.05);
		border-radius: 20px;
		padding: 2rem;
		transition: all 0.3s ease;
		backdrop-filter: blur(20px);
	}

	.performance-card:hover {
		transform: translateY(-5px);
		border-color: rgba(96, 165, 250, 0.3);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
	}

	.performance-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1.5rem;
	}

	.performance-icon {
		font-size: 2rem;
	}

	.performance-trend {
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.9rem;
		font-weight: 600;
	}

	.performance-trend.positive {
		background: rgba(16, 185, 129, 0.2);
		color: #10b981;
	}

	.performance-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: white;
		margin: 0 0 1rem 0;
	}

	.performance-value {
		font-size: 2.5rem;
		font-weight: 700;
		color: white;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #60a5fa 0%, #a855f7 50%, #10b981 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.performance-description {
		color: rgba(255, 255, 255, 0.7);
		line-height: 1.6;
		margin: 0 0 1.5rem 0;
	}

	.performance-chart {
		height: 8px;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 4px;
		overflow: hidden;
	}

	.chart-bar {
		height: 100%;
		background: linear-gradient(90deg, #10b981 0%, #3b82f6 100%);
		border-radius: 4px;
		transition: width 1s ease;
	}

	/* Category Section */
	.category-section {
		padding: 6rem 0;
		background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
	}

	.category-breakdown {
		max-width: 800px;
		margin: 0 auto;
	}

	.category-chart {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.chart-item {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.chart-segment {
		width: var(--percentage);
		height: 40px;
		background: var(--color);
		border-radius: 8px;
		transition: width 1s ease;
	}

	.chart-label {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex: 1;
		color: white;
	}

	.category-name {
		font-weight: 600;
	}

	.category-value {
		color: rgba(255, 255, 255, 0.7);
		font-size: 0.9rem;
	}

	/* Growth Section */
	.growth-section {
		padding: 6rem 0;
		background: #121212;
	}

	.growth-metrics {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 3rem;
	}

	.growth-card {
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(255, 255, 255, 0.05);
		border-radius: 20px;
		padding: 2rem;
		backdrop-filter: blur(20px);
	}

	.growth-title {
		font-size: 1.5rem;
		font-weight: 600;
		color: white;
		margin: 0 0 2rem 0;
		text-align: center;
	}

	.growth-chart {
		height: 200px;
		position: relative;
		margin-bottom: 2rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		border-left: 1px solid rgba(255, 255, 255, 0.1);
	}

	.chart-svg {
		width: 100%;
		height: 100%;
	}

	.chart-path {
		stroke-linecap: round;
		stroke-linejoin: round;
		filter: drop-shadow(0 0 10px rgba(16, 185, 129, 0.3));
	}

	.chart-point {
		filter: drop-shadow(0 0 8px rgba(16, 185, 129, 0.5));
		transition: all 0.3s ease;
	}

	.chart-point:hover {
		r: 8;
		filter: drop-shadow(0 0 12px rgba(16, 185, 129, 0.8));
	}

	.growth-stats {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1rem;
	}

	.growth-stat {
		text-align: center;
		padding: 1rem;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 12px;
	}

	.growth-stat .stat-label {
		display: block;
		font-size: 0.8rem;
		color: rgba(255, 255, 255, 0.6);
		margin-bottom: 0.5rem;
	}

	.growth-stat .stat-value {
		display: block;
		font-size: 1.25rem;
		font-weight: 600;
		color: white;
	}

	/* Geographic Section */
	.geographic-section {
		padding: 6rem 0;
		background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
	}

	.geographic-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2.5rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.region-card {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 20px;
		padding: 2.5rem 2rem;
		text-align: center;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		backdrop-filter: blur(20px);
		position: relative;
		overflow: hidden;
	}

	.region-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(96, 165, 250, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.region-card:hover {
		transform: translateY(-8px) scale(1.02);
		border-color: rgba(96, 165, 250, 0.4);
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
	}

	.region-card:hover::before {
		opacity: 1;
	}

	.region-header {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2rem;
		position: relative;
		z-index: 2;
	}

	.region-icon {
		font-size: 3rem;
		margin-bottom: 0.5rem;
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
	}

	.region-name {
		font-size: 1.5rem;
		font-weight: 700;
		color: white;
		margin: 0;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
	}

	.region-stats {
		display: flex;
